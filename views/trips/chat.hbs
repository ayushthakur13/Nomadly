<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{trip.tripName}} Chat</title>
    <link rel="stylesheet" href="/styles/components/style.css">
    <link rel="stylesheet" href="/styles/chat.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    {{>navbar}}

    <main class="chat-main">
        <a href="/trips/{{trip._id}}/details" class="btn-back-fixed">‚Üê</a>
        <div class="chat-container">
            <h2 class="chat-title">{{trip.mainDestination}} Trip Chat</h2>
            <div class="chat-box" id="chat-box">
                {{#each messages}}
                    <div class="chat-message {{#ifEqualsStr this.sender._id ../user._id}}me{{/ifEqualsStr}}">
                        <div class="message-header">
                            <strong>
                                {{#ifEqualsStr this.sender._id ../user._id}}
                                    You
                                {{else}}
                                    {{this.sender.name}}
                                {{/ifEqualsStr}}
                            </strong>
                            <span class="timestamp">{{formatDate this.createdAt}}</span>
                        </div>
                        <div class="message-body">{{this.content}}</div>
                    </div>
                {{/each}}
            </div>

            <form id="chat-form" class="chat-form" autocomplete="off">
                <input type="text" id="chat-input" class="chat-input" placeholder="Type your message..." required />
                <button type="submit" class="chat-send-btn">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </form>
        </div>
    </main>

    {{>footer}}

    <script>
        window.tripId = "{{trip._id}}";
        window.userId = '{{user._id}}';
        window.addEventListener('DOMContentLoaded', () => {
            const chatBox = document.getElementById('chat-box');
            chatBox.scrollTop = chatBox.scrollHeight;
        });
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/scripts/socket.js"></script>
</body>
</html>
