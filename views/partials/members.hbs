<section class="tab-content" id="members">

    {{#if isOwner}}
    <form class="invite-member-form" method="POST" action="/trips/{{trip._id}}/members/invite">
        <input type="text" name="identifier" placeholder="Enter username or email" required />
        <button type="submit">Invite</button>
    </form>
    {{/if}}

    <h4 class="member-count">👥 {{totalMembers}} {{memberLabel}} total</h4>

    <ul class="member-list">
        <li class="member-card owner">
            <span class="member-name">
                {{owner.username}} <span class="owner-badge">👑 Owner</span>
            </span>
        </li>

        {{#each participants}}
        <li class="member-card">
            <span class="member-name">{{this.username}}</span>
            {{#if ../isOwner}}
                <form method="POST" action="/trips/{{../trip._id}}/members/{{this._id}}/remove">
                    <button type="submit" class="remove-btn" title="Remove">❌</button>
                </form>
            {{/if}}
        </li>
        {{/each}}
    </ul>
</section>
