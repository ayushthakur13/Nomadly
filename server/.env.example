# Server Environment Variables (example)
# Rename this file to .env and fill values

# App
NODE_ENV=development
PORT=4444

# Database
MONGO_URL=replace_with_your_uri

# JWT
JWT_SECRET=replace_me_access_secret
JWT_REFRESH_SECRET=replace_me_refresh_secret
# Optional expiries
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=30d

# CORS / Client
CLIENT_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Google OAuth / Identity Services
# Used to verify Google ID tokens server-side
GOOGLE_CLIENT_ID=your_google_client_id

MAPBOX_ACCESS_TOKEN=your_mapbox_access_token