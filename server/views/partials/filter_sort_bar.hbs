<form method="get" class="trip-filter-bar">
    <div class="filter-group">
        <label for="category">Filter by Category</label>
        <select id="category" name="category" onchange="this.form.submit()">
            <option value="">All</option>
            <option value="🗻 Mountains" {{#ifEquals selectedCategory "🗻 Mountains"}}selected{{/ifEquals}}>🗻 Mountains</option>
            <option value="🏕️ Adventure" {{#ifEquals selectedCategory "🏕️ Adventure"}}selected{{/ifEquals}}>🏕️ Adventure</option>
            <option value="🏖️ Beach" {{#ifEquals selectedCategory "🏖️ Beach"}}selected{{/ifEquals}}>🏖️ Beach</option>
            <option value="🏰 Historical" {{#ifEquals selectedCategory "🏰 Historical"}}selected{{/ifEquals}}>🏰 Historical</option>
            <option value="🛶 Nature" {{#ifEquals selectedCategory "🛶 Nature"}}selected{{/ifEquals}}>🛶 Nature</option>
            <option value="🙏🏻 Spiritual" {{#ifEquals selectedCategory "🙏🏻 Spiritual"}}selected{{/ifEquals}}>🙏🏻 Spiritual</option>
            <option value="Other" {{#ifEquals selectedCategory "Other"}}selected{{/ifEquals}}>Other</option>
        </select>
    </div>

    <div class="filter-group">
        <label for="sort">Sort by</label>
        <select id="sort" name="sort" onchange="this.form.submit()">
            <option value="latest" {{#ifEquals selectedSort "latest"}}selected{{/ifEquals}}>Latest</option>
            <option value="oldest" {{#ifEquals selectedSort "oldest"}}selected{{/ifEquals}}>Oldest</option>
        </select>
    </div>
</form>
