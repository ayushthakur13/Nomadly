<section id="public-trips" class="explore-section">
  <div class="section-heading">
    <h2 class="section-title">🌐 Community Picks</h2>
    <p class="section-subtext">
      Explore real trips shared by our amazing Nomadly users. Get inspired and clone one for your own journey!
    </p>
  </div>

  {{#if publicTrips.length}}
    <div class="trip-card-grid">
      {{#each publicTrips}}
        <a href="/explore/trip/{{this._id}}" class="trip-card-modern">
          <div class="trip-card-modern-img" style="background-image: url('{{this.imageUrl}}');"></div>
          <div class="trip-card-modern-content">
              <h2 class="trip-modern-title">{{this.tripName}}</h2>
              <span class="category-badge-explore">{{this.category}}</span>
              <p class="trip-modern-destination">📍 {{this.mainDestination}}</p>
              <p class="trip-modern-dates">🗓️ {{formatDate this.startDate}} - {{formatDate this.endDate}}</p>
              <p class="trip-modern-duration">⌚ {{calculateTripDuration this.startDate this.endDate}}</p>
              {{#if this.description}}
              <p class="trip-modern-description">{{this.description}}</p>
              {{/if}}
              <p class="trip-publisher">
                👤 Shared by: {{#if this.createdBy}} {{this.createdBy.name}} {{else}} Anonymous Explorer{{/if}}
              </p>
          </div>
        </a>
      {{/each}}
    </div>

    <div class="see-all-wrapper">
      <a href="/explore/public" class="see-all-btn">See All Community Trips →</a>
    </div>
  {{else}}
    <p class="empty-message">No public trips available at the moment.</p>
  {{/if}}
  
</section>
